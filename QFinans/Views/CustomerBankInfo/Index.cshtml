@model PagedList.IPagedList<QFinans.Areas.Api.Models.CustomerBankInfo>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Customer Bank Info";
}

<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between mb-3 border-bottom">
            <h5 class="card-title">Müşteri Banka Bilgileri</h5>
            <div>
                <a class="btn btn-xs btn-success" href="@Url.Action("Create", "CustomerBankInfo")"><i class="fas fa-plus-circle"></i> Banka Ekle</a>
            </div>
        </div>

        @using (Html.BeginForm("Index", "CustomerBankInfo", FormMethod.Get, new { @id = "formSearch" }))
        {
            <div class="row mb-2">
                <div class="col-md-12 ">
                    <div class="d-flex">
                        <select class="custom-select custom-select-sm" id="selectPageSize" name="CustomPageSize" onchange="getPageSize()" style="width:80px;">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                            <option value="250">250</option>
                        </select>
                        <div class="flex-grow-1">
                            <div class="input-group justify-content-end">
                                @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control form-control-sm", @placeholder = "", @aria_describedby = "button-addon2" })
                                <div class="input-group-append">
                                    <button class="btn btn-sm btn-info" type="submit" id="button-addon2"><i class="fas fa-search"></i> Ara</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="table-responsive">
            <table class="table table-sm table-bordered table-hover table-dark">
                <tr>
                    <th>Id</th>
                    <th>
                        İsim
                    </th>
                    <th>Durum</th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BankType.Name)
                        </td>
                        <td>
                            @if (item.IsActive == true)
                            {
                                <span class="badge badge-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">Pasif</span>
                            }
                        </td>
                        <td>
                            <a class="btn btn-xs btn-warning" href="@Url.Action("Edit", "CustomerBankInfo", new { id = item.Id })" title="Düzenle"><i class="far fa-edit"></i></a>
                            <button type="submit" class="btn btn-xs btn-danger" data-toggle="modal" data-target="#exampleModal-@item.Id" title="Sil"><i class="far fa-trash-alt"></i></button>
                        </td>
                    </tr>
                }

            </table>
        </div>

        <hr />
        <div class="row">
            <div class="col-sm-2">
                <span>Sayfa @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</span>
            </div>
            <div class="col-sm-10">
                @Html.PagedListPager(Model, page => Url.Action("Index", "MoneyTransferType", new { page = page, currentFilter = ViewBag.CurrentFilter })
                                                                            , new PagedListRenderOptions
                                                                            {
                                                                                UlElementClasses = new string[] { "pagination pagination-sm justify-content-end my-0" },
                                                                                LiElementClasses = new string[] { "page-item" },
                                                                                ContainerDivClasses = new string[] { "page float-right" }
                                                                            })
            </div>
        </div>

    </div>
</div>

@foreach (var item in Model)
{
    <div class="modal fade" id="exampleModal-@item.Id" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Sil</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                @using (Html.BeginForm("Delete", "CustomerBankInfo", new { id = item.Id }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="modal-body">
                        <div class="alert alert-danger" role="alert">
                            Silmek istediğinizden eminmisiniz?
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-sm btn-info" data-dismiss="modal"><i class="fas fa-times-circle"></i> Kapat</button>
                        <button type="submit" class="btn btn-sm btn-danger"><i class="far fa-trash-alt"></i> Sil</button>
                    </div>
                }

            </div>
        </div>
    </div>
}