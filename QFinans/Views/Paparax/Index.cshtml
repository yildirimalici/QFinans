@model IEnumerable<QFinans.Areas.Api.Models.Paparax>

@{
    ViewBag.Title = "Paparax";
}

<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between mb-3 border-bottom">
            <h5 class="card-title">Paparax</h5>
            <div>
                <a class="btn btn-xs btn-success" href="@Url.Action("Create", "Paparax")"><i class="fas fa-plus-circle"></i> Bakiye Ekle</a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-sm table-bordered table-hover table-dark">
                <tr>
                    <th>Id</th>
                    <th>
                        Paparax Bakiye
                    </th>
                    <th>Toplam Kasa</th>
                    @*<th></th>*@
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Balance)
                        </td>
                        <td>@ViewBag.Safe</td>
                        @*<td>
                            <button type="submit" class="btn btn-xs btn-danger" data-toggle="modal" data-target="#exampleModal-@item.Id" title="Sil"><i class="far fa-trash-alt"></i></button>
                        </td>*@
                    </tr>
                }

            </table>
        </div>

    </div>
</div>

@foreach (var item in Model)
{
    <div class="modal fade" id="exampleModal-@item.Id" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Sil</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                @using (Html.BeginForm("Delete", "Paparax", new { id = item.Id }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="modal-body">
                        <div class="alert alert-danger" role="alert">
                            Silmek istediğinizden eminmisiniz?
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-sm btn-info" data-dismiss="modal"><i class="fas fa-times-circle"></i> Kapat</button>
                        <button type="submit" class="btn btn-sm btn-danger"><i class="far fa-trash-alt"></i> Sil</button>
                    </div>
                }

            </div>
        </div>
    </div>
}
