@model PagedList.IPagedList<QFinans.Areas.Api.Models.AccountTransactions>
@using PagedList.Mvc;
@using QFinans.Models;
@using QFinans.Repostroies;

@{
    ViewBag.Title = "Çekim";
    ApplicationDbContext db = new ApplicationDbContext();
    var _cashInAll = db.CashFlow.Where(c => c.IsDeleted == false && c.IsCashIn == true);
    var _cashOutAll = db.CashFlow.Where(c => c.IsDeleted == false && c.IsCashIn == false);
    CustomFunctions _qr = new CustomFunctions();
    var _accountInfo = db.AccountInfo.Where(x => x.IsDeleted == false && x.IsArchive == false).ToList();

    if (ViewBag.CurrentDateFrom != null)
    {
        ViewBag.CurrentDateFrom = ViewBag.CurrentDateFrom.ToString("yyyy-MM-dd");
    }

    if (ViewBag.CurrentDateTo != null)
    {
        ViewBag.CurrentDateTo = ViewBag.CurrentDateTo.ToString("yyyy-MM-dd");
    }
}

<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between mb-3 border-bottom">
            <h5 class="card-title">Çekim Talepleri</h5>
            <div>
                <a class="btn btn-xs btn-primary" href="@Url.Action("Create", "CashFlow")"><i class="fas fa-plus-circle"></i> Hesap Hareketi Ekle</a>
                <a class="btn btn-xs btn-success" href="@Url.Action("CreateDraw", "AccountTransactions")"><i class="fas fa-plus-circle"></i> Çekim Ekle</a>
            </div>
        </div>

        @using (Html.BeginForm("Draw", "AccountTransactions", FormMethod.Get, new { @id = "formSearch" }))
        {
            <div class="row mb-4 align-items-end">
                <div class="col-xl-2">
                    <select class="custom-select mr-2" id="selectPageSize" name="CustomPageSize" onchange="getPageSize()" style="width:80px;">
                        <option value="10">10</option>
                        <option value="25">25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                        <option value="250">250</option>
                    </select>
                </div>

                <div class="col-xl-4">
                    <label>Hesap</label>
                    <select class="custom-select select2" id="accountInfoId" name="accountInfoId">
                        <option selected>Seçiniz</option>
                        @foreach (var item in _accountInfo)
                        {
                            <option value="@item.Id">@item.Name @item.SurName (@item.AccountNumber)</option>
                        }
                    </select>
                </div>

                <div class="col-xl-4">
                    <label>Durum</label>
                    <select class="custom-select" id="transactionStatus" name="transactionStatus">
                        <option selected>Seçiniz</option>
                        <option value="1">Yeni</option>
                        <option value="2">Onay</option>
                        <option value="3">Red</option>
                    </select>
                </div>

            </div>

            <div class="row mb-4 align-items-end">

                <div class="col-xl-4">
                    <div class="row">
                        <div class="col-md-6">
                            <label>Başlangıç</label>
                            @Html.TextBox("DateFrom", ViewBag.CurrentDateFrom as string, new { @class = "form-control", @Type = "date" })
                        </div>
                        <div class="col-md-6">
                            <label>Bitiş</label>
                            @Html.TextBox("DateTo", ViewBag.CurrentDateTo as string, new { @class = "form-control", @Type = "date" })
                        </div>
                    </div>
                </div>

                <div class="col-xl-4">
                    <div>
                        <label>Arama kelimesi</label>
                        @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control", @placeholder = "Arama yapmak için bir kelime yazın" })
                    </div>
                </div>

                <div class="col-xl-2 float-right">
                    <button class="btn btn-sm btn-info" type="submit"><i class="fas fa-search"></i> Ara</button>
                </div>

            </div>
        }

        <div class="table-responsive">
            <table class="table table-sm table-bordered table-hover table-dark text-white-50" id="tabelDraw">
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Kullanıcı
                    </th>
                    <th>
                        İsim
                    </th>
                    <th>
                        Soyisim
                    </th>
                    <th>
                        Tutar
                    </th>
                    <th>
                        Müşteri Hesap No
                    </th>
                    <th class="tarih">
                        Tarih
                    </th>
                    <th>Çekim Yapılan Hesap</th>
                    <th>
                        Durum
                    </th>
                    <th style="width: 110px !important"></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr class="@(@item.TransactionStatus == QFinans.Areas.Api.Models.TransactionStatus.Confirm ? "bg-confirm": "") @(@item.TransactionStatus == QFinans.Areas.Api.Models.TransactionStatus.Deny ? "bg-deny": "") @(@item.TransactionStatus == QFinans.Areas.Api.Models.TransactionStatus.New ? "bg-new": "")" id="transaction-@item.Id">
                        <td id="id-@item.Id">
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td id="userName-@item.Id">
                            @if (db.BlackList.Where(x => x.IsDeleted == false).Any(x => x.UserName == item.UserName) == true)
                            {
                                <i class="fas fa-user-secret text-white"></i>
                            }
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td id="name-@item.Id" style="font-size:16px">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td id="surName-@item.Id" style="font-size:16px">
                            @Html.DisplayFor(modelItem => item.SurName)
                        </td>
                        <td class="text-right" id="amount-@item.Id" style="font-size:18px">
                            @if (item.Amount == item.OldAmount)
                            {

                                if (item.IsCoin)
                                {
                                    <span class="mb-1">@item.Amount.ToString("N0")</span><br />
                                    <span class="badge badge-primary" style="font-size:12px">@item.ExchangeValue @item.UnitSymbol</span>
                                }
                                else
                                {
                                    @item.Amount.ToString("N0")
                                }
                            }
                            else
                            {

                                if (item.IsCoin)
                                {
                                    <span class="badge badge-success" style="font-size:100%">@item.Amount.ToString("N0")</span>
                                    <span class="badge badge-danger" style="font-size:100%">@String.Format("{0:N0}", item.OldAmount)</span><br />
                                    <span class="badge badge-primary" style="font-size:12px">@(item.Amount / item.ExchangeUnitValue ) @item.UnitSymbol</span>
                                }
                                else
                                {
                                    <span class="badge badge-success" style="font-size:100%">@item.Amount.ToString("N0")</span>
                                    <span class="badge badge-danger" style="font-size:100%">@String.Format("{0:N0}", item.OldAmount)</span>
                                }
                            }
                        </td>
                        <td id="accountNumber-@item.Id">
                            @Html.DisplayFor(modelItem => item.CustomerAccountNumber)

                            @*@if (item.TransactionStatus == QFinans.Areas.Api.Models.TransactionStatus.New)
                            {
                                <button type="button" class="btn btn-xs btn-primary mb-1" data-toggle="modal" data-target="#qrModal-@item.Id"><i class="fas fa-qrcode"></i></button>
                            }*@
                        </td>
                        <td class="text-center">
                            <span class="d-block">@Html.DisplayFor(modelItem => item.AddDate)</span>
                            <span class="d-block">@Html.DisplayFor(modelItem => item.ResponseDate)</span>
                        </td>
                        <td id="note-@item.Id">
                            @if (item.DrawSplit.Where(x => x.IsDeleted == false).Any() && !item.IsCoin)
                            {
                                foreach (var item2 in item.DrawSplit.Where(x => x.IsDeleted == false).OrderBy(x => x.Id))
                                {
                                    <span class="d-block">
                                        @item2.AccountInfo.Id - @item2.AccountInfo.Name @item2.AccountInfo.SurName

                                        @if (User.IsInRole("ConfirmDrawAccountTransactions"))
                                        {
                                            <span>
                                                (@((db.AccountTransactions.Where(x => x.Deposit == true && x.AccountInfoId == item2.AccountInfoId && x.TransactionStatus == QFinans.Areas.Api.Models.TransactionStatus.Confirm).Select(x => x.Amount).DefaultIfEmpty(0).Sum()

											- db.AccountTransactions.Where(x => x.Deposit == false && x.AccountInfoId == item2.AccountInfoId && x.TransactionStatus == QFinans.Areas.Api.Models.TransactionStatus.Confirm && x.DrawSplit.Where(d => d.IsDeleted == false && d.AccountInfoId == item2.AccountInfoId).Count() == 0).Select(x => x.Amount).DefaultIfEmpty(0).Sum()

											- db.DrawSplit.Where(x => x.IsDeleted == false && x.AccountInfoId == item2.AccountInfoId).Select(x => x.Amount).DefaultIfEmpty(0).Sum()

											- ((db.AccountTransactions.Where(x => x.Deposit == true && x.IsFree == false && x.AccountInfoId == item2.AccountInfoId && x.TransactionStatus == QFinans.Areas.Api.Models.TransactionStatus.Confirm).Select(x => x.Amount).DefaultIfEmpty(0).Sum() + _cashInAll.Where(x => x.IsFree == false && x.AccountInfoId == item.AccountInfoId).Select(x => x.Amount).DefaultIfEmpty(0).Sum()) * 3.4M / 100)

											+ _cashInAll.Where(c => c.AccountInfoId == item2.AccountInfoId).Select(c => c.Amount).DefaultIfEmpty(0).Sum()

											- _cashOutAll.Where(c => c.AccountInfoId == item2.AccountInfoId).Select(c => c.Amount).DefaultIfEmpty(0).Sum()).ToString("N0")))
                                            </span>
                                        }
                                        (@String.Format("{0:N0}", item2.Amount))
                                    </span>
                                }
                            }
                            else if (item.AccountInfoId != null && !item.IsCoin)
                            {
                                <span class="d-block">
                                    @item.AccountInfo.Id - @item.AccountInfo.Name @item.AccountInfo.SurName
                                    @if (User.IsInRole("ConfirmDrawAccountTransactions"))
                                    {
                                        <span>
                                            (@((db.AccountTransactions.Where(x => x.Deposit == true && x.AccountInfoId == item.AccountInfoId && x.TransactionStatus == QFinans.Areas.Api.Models.TransactionStatus.Confirm).Select(x => x.Amount).DefaultIfEmpty(0).Sum()

											- db.AccountTransactions.Where(x => x.Deposit == false && x.AccountInfoId == item.AccountInfoId && x.TransactionStatus == QFinans.Areas.Api.Models.TransactionStatus.Confirm && x.DrawSplit.Where(d => d.IsDeleted == false && d.AccountInfoId == item.AccountInfoId).Count() == 0).Select(x => x.Amount).DefaultIfEmpty(0).Sum()

											- db.DrawSplit.Where(x => x.IsDeleted == false && x.AccountInfoId == item.AccountInfoId).Select(x => x.Amount).DefaultIfEmpty(0).Sum()

											- ((db.AccountTransactions.Where(x => x.Deposit == true && x.IsFree == false && x.AccountInfoId == item.AccountInfoId && x.TransactionStatus == QFinans.Areas.Api.Models.TransactionStatus.Confirm).Select(x => x.Amount).DefaultIfEmpty(0).Sum() + _cashInAll.Where(x => x.IsFree == false && x.AccountInfoId == item.AccountInfoId).Select(x => x.Amount).DefaultIfEmpty(0).Sum()) * 3.4M / 100)

											+ _cashInAll.Where(c => c.AccountInfoId == item.AccountInfoId).Select(c => c.Amount).DefaultIfEmpty(0).Sum()

											- _cashOutAll.Where(c => c.AccountInfoId == item.AccountInfoId).Select(c => c.Amount).DefaultIfEmpty(0).Sum()).ToString("N0")))
                                        </span>
                                    }
                                </span>
                            }
                            else if (item.IsCoin)
                            {
                                <span class="badge badge-primary">Coinbase</span>
                            }
                            else
                            {
                                <span></span>
                            }
                        </td>
                        <td>
                            @if (item.TransactionStatus == QFinans.Areas.Api.Models.TransactionStatus.Confirm)
                            {
                                if (item.Amount == item.OldAmount)
                                {
                                    <span class="badge badge-success" id="status-@item.Id" title="Confirm">Onay</span>
                                }
                                else
                                {
                                    <span class="badge badge-warning text-wrap" id="status-@item.Id" title="Confirm">Onay (Düzenlendi)</span>
                                }
                            }
                            @if (item.TransactionStatus == QFinans.Areas.Api.Models.TransactionStatus.Deny)
                            {
                                <span class="badge badge-danger" id="status-@item.Id" title="Deny">Red</span>
                            }
                            @if (item.TransactionStatus == QFinans.Areas.Api.Models.TransactionStatus.New)
                            {
                                <span class="badge badge-info" id="status-@item.Id" title="New">Yeni</span>
                            }
                        </td>
                        <td>
                            <a class="btn btn-xs btn-success btn-block mb-1" href="@Url.Action("ConfirmDraw", "AccountTransactions", new { id = item.Id })"><i class="fas fa-check-circle"></i> Onayla</a>
                            <button type="button" class="btn btn-xs btn-danger btn-block mb-1" data-toggle="modal" data-target="#exampleModal-@item.Id"><i class="fas fa-times-circle"></i> Reddet</button>
                            @if (!item.IsCoin)
                            {
                                <a class="btn btn-xs btn-warning btn-block" href="@Url.Action("Edit", "AccountTransactions", new { id = item.Id })"><i class="far fa-edit"></i> Düzenle</a>
                            }
                        </td>
                    </tr>
                }

            </table>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-2">
                <span>Sayfa @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</span>
            </div>
            <div class="col-sm-10">
                @Html.PagedListPager(Model, page => Url.Action("Draw", "AccountTransactions", new { page = page, currentFilter = ViewBag.CurrentFilter, currentDateFrom = ViewBag.CurrentDateFrom, currentDateTo = ViewBag.CurrentDateTo, currentTransactionStatus = ViewBag.CurrentTransactionStatus, currentAccountInfoId = ViewBag.CurrentAccountInfoId })
                                                                            , new PagedListRenderOptions
                                                                            {
                                                                                UlElementClasses = new string[] { "pagination pagination-sm justify-content-end my-0" },
                                                                                LiElementClasses = new string[] { "page-item" },
                                                                                ContainerDivClasses = new string[] { "page float-right" }
                                                                            })
            </div>
        </div>

    </div>
</div>

@foreach (var item in Model)
{
    <div class="modal fade" id="exampleModal-@item.Id" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content" id="modalContent-@item.Id">
                <form action="/AccountTransactions/Deny/@item.Id" method="post" id="formDeny-@item.Id">
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <h5 class="modal-title">Reddet</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <select class="form-control form-control-sm mb-3" id="selectDeny-@item.Id" onclick="setReason(@item.Id)">
                            <option value="">Seçiniz</option>
                            <option value="Aylık Limit Aşımı">Aylık Limit Aşımı</option>
                            <option value="Yanlış Papara Numarası">Yanlış Papara Numarası</option>
                            <option value="İsim Uyuşmazlığı">İsim Uyuşmazlığı</option>
                            <option value="">Diğer</option>
                        </select>
                        <div class="form-group">
                            <label class="control-label" for="validationTextarea">Red Gerekçesi</label>
                            <textarea class="form-control form-control-sm" id="validationTextarea-@item.Id" name="aciklama" placeholder="Açıklama gereklidir." rows="6" required>@item.Note</textarea>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-sm btn-info" data-dismiss="modal"><i class="fas fa-times-circle"></i> Vazgeç</button>
                        <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-times-circle"></i> Reddet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @*if (item.TransactionStatus == QFinans.Areas.Api.Models.TransactionStatus.New)
    {
        <div class="modal fade" id="qrModal-@item.Id" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
                <div class="modal-content" id="modalContent-@item.Id">
                    <div class="modal-header">
                        <h5 class="modal-title">QR</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="modal-body">

                        <div class="d-block text-center mb-3" style="font-size:16px">
                            <span class="d-block mb-2">Hesap sahibi: @item.Name @item.SurName</span>
                            <span class="d-block mb-2">Müşteri Hesap no: @item.CustomerAccountNumber</span>
                            <span class="d-block mb-2">Tutar: @item.Amount.ToString("N0")</span>
                        </div>

                        <img class="mx-auto d-block" src="@_qr.GenerateQR(("https://www.papara.com/personal/qr?accountNumber=" + item.CustomerAccountNumber + "&currency=0&amount=" + Math.Round(item.Amount)))" style="max-width:160px" />
                    </div>


                    <div class="modal-footer">
                        <button type="button" class="btn btn-sm btn-info" data-dismiss="modal"><i class="fas fa-times-circle"></i> Kapat</button>
                    </div>
                </div>
            </div>
        </div>
    }*@
}

@section scripts{
    @if (ViewBag.CurrentTransactionStatus != null)
    {
        <script>
            $("#transactionStatus").val(@Convert.ToInt32(ViewBag.CurrentTransactionStatus));
        </script>
    }
    <script>
        $(document).ready(function () {
            $('.select2').select2({
                theme: 'bootstrap4',
            });
        });

        $("#accountInfoId").val(@ViewBag.CurrentAccountInfoId);

        setInterval(function () {
            window.location.reload(1);
        }, 120000);

        $("#selectPageSize").val(@ViewBag.CustomPageSize);

        function getPageSize() {
            $("#formSearch").submit();
        };

        function setReason(id) {
            _reason = $("#selectDeny-" + id).val();
            $("#validationTextarea-" + id).val(_reason);
            //alert(_reason)
        }
    </script>
}