@model QFinans.Areas.Api.Models.SystemParameters

@{
    ViewBag.Title = "Sistem Parametreleri";
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Sistem Parametreleri</h5>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group row">
                @Html.LabelFor(model => model.BankChargeTransactionLimit, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.BankChargeTransactionLimit, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BankChargeTransactionLimit, "", new { @class = "text-danger" })
                    <small class="form-text text-muted">
                        Ücretsiz işlem sayısı. (örneğin ilk 10 işlem ücretsiz ise 10 yazınız.)
                    </small>
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.BankChargeAmountLimit, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.BankChargeAmountLimit, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BankChargeAmountLimit, "", new { @class = "text-danger" })
                    <small class="form-text text-muted">
                        Ücretsiz işlem tutarı. (örneğin 5000'e ücretsiz ise 5000 yazınız.)
                    </small>
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.BalanceStartDate, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.BalanceStartDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                    @Html.ValidationMessageFor(model => model.BalanceStartDate, "", new { @class = "text-danger" })
                    <small class="form-text text-muted">
                        Bakiyeyi belli bir tarihten sonrasını hesablar. Seçtiğiniz tarihten önceki işlemler hesaplamaya dahil edilmez.
                    </small>
                    <small class="form-text text-muted">
                        Boş bırakırsanız tüm işlemler dahil olacaktır.
                    </small>
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.InitialBalance, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.InitialBalance, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.InitialBalance, "", new { @class = "text-danger" })
                    <small class="form-text text-muted">
                        Bakiye başlangıç tutarı. (örneğin 17.850,62 ise 17850,62 yazınız)
                    </small>
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.BalanceEditAmount, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.BalanceEditAmount, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BalanceEditAmount, "", new { @class = "text-danger" })
                    <small class="form-text text-muted">
                        Bakiye düzenleme tutarı. (örneğin 1000 eklenecek ise 1000 yazınız. 1000 çıkarılacak ise -1000)
                    </small>
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.BankCharge, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.BankCharge, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BankCharge, "", new { @class = "text-danger" })
                    <small class="form-text text-muted">
                        Bakiye hesaplanırken kullanılan orandır. (örneğin %8.5 oranında komsiyon düşmek için 8,5 yazınız.)
                    </small>
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.InitialAmountLimit, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.InitialAmountLimit, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.InitialAmountLimit, "", new { @class = "text-danger" })
                    <small class="form-text text-muted">
                        Yeni gelen yatırım tutarı bu değere eşit ve üstünde ise boş olan ilk hesaba ilk işlem olarak ekleyecektir.
                    </small>
                    <small class="form-text text-muted">
                        (örneğin 5000 bin yazarsanız 5000 ve üzerinde gelen yeni yatırım talebini, işlem sayısı sıfır olan ilk hesaba ilk işlem olarak ekleyecektir.)
                    </small>
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.FreeTransactionNumber, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.FreeTransactionNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FreeTransactionNumber, "", new { @class = "text-danger" })
                    <small class="form-text text-muted">
                        İlk kaç işlem ücretsiz ise o kadar yazılmalıdır.
                    </small>
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.DepositPageSize, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.DepositPageSize, new { htmlAttributes = new { @class = "form-control", @min = "1", @max = "100" } })
                    @Html.ValidationMessageFor(model => model.DepositPageSize, "", new { @class = "text-danger" })
                    <small class="form-text text-muted">
                        Default olarak 10 adet gelemektedir. En fazla 100 yazabilirsiniz.
                    </small>
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.DrawPageSize, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.DrawPageSize, new { htmlAttributes = new { @class = "form-control", @min = "1", @max = "100" } })
                    @Html.ValidationMessageFor(model => model.DrawPageSize, "", new { @class = "text-danger" })
                    <small class="form-text text-muted">
                        Default olarak 10 adet gelemektedir. En fazla 100 yazabilirsiniz.
                    </small>
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.AccountInfoPageSize, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.AccountInfoPageSize, new { htmlAttributes = new { @class = "form-control", @min = "1", @max = "100" } })
                    @Html.ValidationMessageFor(model => model.AccountInfoPageSize, "", new { @class = "text-danger" })
                    <small class="form-text text-muted">
                        Default olarak 10 adet gelemektedir. En fazla 100 yazabilirsiniz.
                    </small>
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.EmergencyAccountId, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.EmergencyAccountId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EmergencyAccountId, "", new { @class = "text-danger" })
                    <small class="form-text text-muted">
                        Aktif hesap olmadığı zaman gelen yatırım talebinin alınabilmesi için gerekli hesap id'si. Boş bırakıldığın default olarak 337 id'li hesap atanır.'
                    </small>
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.FreeFirstDifferentUserNumber, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.FreeFirstDifferentUserNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FreeFirstDifferentUserNumber, "", new { @class = "text-danger" })
                    <small class="form-text text-muted">
                        ilk kaç farklı kullanıcının işlemleri ücretsiz olacak?
                    </small>
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.EftStartTime, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.EftStartTime, new { htmlAttributes = new { @class = "form-control", @type = "time" } })
                    @Html.ValidationMessageFor(model => model.EftStartTime, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.EftEndTime, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.EftEndTime, new { htmlAttributes = new { @class = "form-control", @type = "time" } })
                    @Html.ValidationMessageFor(model => model.EftEndTime, "", new { @class = "text-danger" })
                </div>
            </div>

            <hr />
            <button type="submit" class="btn btn-sm btn-success"><i class="fas fa-save"></i> Kaydet</button>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.validate.tr.js"></script>
}
