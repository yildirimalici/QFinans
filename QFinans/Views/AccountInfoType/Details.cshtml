@model QFinans.Areas.Api.Models.AccountInfoType

@{
    ViewBag.Title = "Details";
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Heap Türü Detayı</h5>
        <hr />

        <dl class="row">
            <dt class="col-md-3">
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd class="col-md-9">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-md-3">
                @Html.DisplayNameFor(model => model.TransactionLimit)
            </dt>

            <dd class="col-md-9">
                @Html.DisplayFor(model => model.TransactionLimit)
            </dd>

            <dt class="col-md-3">
                @Html.DisplayNameFor(model => model.AmountLimit)
            </dt>

            <dd class="col-md-9">
                @Html.DisplayFor(model => model.AmountLimit)
            </dd>

            <dt class="col-md-3">
                @Html.DisplayNameFor(model => model.BgColor)
            </dt>

            <dd class="col-md-9">
                <div style="width:60px; height:10px; background-color: #@Model.BgColor"></div>
            </dd>

            <dt class="col-md-3">
                @Html.DisplayNameFor(model => model.TextColor)
            </dt>

            <dd class="col-md-9">
                <span style="color: #@Model.TextColor">Text Color</span>
            </dd>

        </dl>

        <hr />
        <a class="btn btn-sm btn-info" href="@Url.Action("Index", "AccountInfoType")"><i class="fas fa-arrow-circle-left"></i> Geri Dön</a>
    </div>
</div>