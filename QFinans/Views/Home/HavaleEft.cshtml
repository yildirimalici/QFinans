@model IEnumerable<QFinans.Areas.Api.Models.MoneyTransfer>
@using Microsoft.AspNet.Identity
@using QFinans.Models
@{
    ViewBag.Title = "Dashboard";
    ApplicationDbContext db = new ApplicationDbContext();
    DateTime firstTransDate = db.AccountTransactions.OrderBy(x => x.AddDate).Select(x => (DateTime?)x.AddDate).FirstOrDefault() ?? DateTime.Now;
    DateTime? startDate = db.SystemParameters.Select(x => (x.BalanceStartDate == null ? firstTransDate : x.BalanceStartDate)).FirstOrDefault();
    var _currentUser = db.Users.Find(User.Identity.GetUserId());
}

<div class="d-flex justify-content-between">
