@if (Request.IsAuthenticated)
{
    if (User.Identity.GetUserName() != "user_api@qfinans.com" || User.Identity.GetUserName() != "nano@qfinans.com")
    {
        <h6 class="card-title">Aktif Hesaplar</h6>

        foreach (var item in ViewBag.ActiveBankInfo)
        {
            <div class="card mb-3">
                <div class="card-body pt-2 pb-1">
                    <div class="row">
                        <div class="col-md-8">
                            <h4>@item.Id - @item.Name @item.Surname (@(item.TransactionCountDeposit == null ? 0 : item.TransactionCountDeposit)) </h4>
                        </div>
                        <div class="col-md-4">
                            <h4 class="text-right font-weight-bold">@((item.Balance == null ? 0 : item.Balance).ToString("N0"))</h4>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
}


