@model PagedList.IPagedList<QFinans.Models.AccountInfoViewModel>
@using PagedList.Mvc;
@using QFinans.Models
@using QFinans.Areas.Api.Models
@{
    ViewBag.Title = "Hesap Bilgileri";

    DateTime date = DateTime.Now.Date;
    DateTime startDate = new DateTime(date.Year, date.Month, 1); ;
    DateTime endDate = startDate.AddMonths(1).AddSeconds(-1);

    ApplicationDbContext db = new ApplicationDbContext();
    var _accountInfoTypeId = db.AccountInfoType.Where(x => x.IsDeleted == false).OrderBy(x => x.Name);
    var _accountAmountRedirectId = db.AccountAmountRedirect.Where(x => x.IsDeleted == false).OrderBy(x => x.Name);
    var _shift = db.ShiftType.Where(x => x.IsDeleted == false).OrderBy(x => x.StartTime).ToList();
    var _shiftAccount = db.ShiftTypeAccountInfo.Where(x => x.IsDeleted == false).OrderByDescending(x => x.AccountInfoId).ToList();
}

<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between mb-3 border-bottom border-secondary">
            <h5 class="card-title">Hesap Bilgileri</h5>
            <div>
                <a class="btn btn-xs btn-success" href="@Url.Action("Create", "AccountInfo")"><i class="fas fa-plus-circle"></i> Hesap Ekle</a>
            </div>
        </div>

        @ViewBag.CurrentActiveAccountId

        @using (Html.BeginForm("Index", "AccountInfo", FormMethod.Get, new { @id = "formSearch" }))
        {
            <div class="row mb-4 align-items-end">
                <div class="col-md-12">
                    <select class="custom-select custom-select-sm mr-2" id="selectPageSize" name="CustomPageSize" onchange="getPageSize()" style="width:80px;">
                        <option value="10">10</option>
                        <option value="25">25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                        <option value="250">250</option>
                    </select>
                </div>
            </div>

            <div class="row mb-4 align-items-end">
                <div class="col-xl-3">
                    <label>Hesap Türü</label>
                    <select class="custom-select select2" id="selectAccountInfoTypeId" name="accountInfoTypeId">
                        <option>Seçiniz</option>
                        @foreach (var item in _accountInfoTypeId)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>

                <div class="col-xl-3">
                    <label>Tutar Yönlendirme Türü</label>
                    <select class="custom-select select2" id="selectAccountAmountRedirectId" name="accountAmountRedirectId">
                        <option>Seçiniz</option>
                        @foreach (var item in _accountAmountRedirectId)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>

                <div class="col-xl-2">
                    <label>Hesap Id</label>
                    @Html.TextBox("Id", ViewBag.CurrentId as string, new { @class = "form-control", @Type = "number" })
                </div>

                <div class="col-xl-3">
                    <label>Arama kelimesi</label>
                    @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control", @placeholder = "Arama yapmak için bir kelime yazın" })
                </div>

                <div class="col-lg-auto ml-auto">
                    <button class="btn btn-sm btn-info mt-3" type="submit"><i class="fas fa-search"></i> Ara</button>
                </div>

            </div>
            
        }

        <ul class="nav nav-tabs mt-3" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="all-account-tab" data-toggle="tab" href="#all-account" role="tab" aria-controls="all-account" aria-selected="false">Tüm Hesaplar</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="all-account-tab" data-toggle="tab" href="#ready-account" role="tab" aria-controls="all-account" aria-selected="false">Hazır Hesaplar</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="active-account-tab" data-toggle="tab" href="#active-account" role="tab" aria-controls="active-account" aria-selected="true">Aktif Hesaplar</a>
            </li>
            @foreach (var item in _shift)
            {
                <li class="nav-item">
                    <a class="nav-link" id="active-account-tab" data-toggle="tab" href="#shift-@item.Id" role="tab" aria-controls="shift-@item.Id" aria-selected="true">@item.Name</a>
                </li>
            }
        </ul>

        <div class="tab-content" id="myTabContent">

            <div class="tab-pane fade show active" id="all-account" role="tabpanel" aria-labelledby="all-account-tab">
                <div class="table-responsive mt-4">
                    <table class="table table-sm table-bordered table-hover table-dark text-white-50">
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                İsim Soyisim
                            </th>
                            <th>
                                Hesap No
                            </th>
                            <th>
                                İşlem Sayısı <span data-toggle="tooltip" data-placement="bottom" title="@startDate @endDate arasındaki yatırım sayısı."><i class="fas fa-info-circle"></i></span>
                            </th>
                            <th>Toplam Yatırım</th>
                            <th>Toplam Çekim</th>
                            <th>Bakiye</th>
                            <th>Tutar Yönlendirme</th>
                            <th>Cihaz</th>
                            <th>Sıra No</th>
                            <th>Son İşlem Yapan Kullanıcı</th>
                            <th>Durum</th>
                            <th style="min-width:160px"></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr style="color: #@item.TextColor; background-color: #@item.BgColor">
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name) @Html.DisplayFor(modelItem => item.SurName)
                                </td>
                                <td data-toggle="tooltip" data-placement="bottom" title="@item.AccountInfoTypeName">
                                    @Html.DisplayFor(modelItem => item.AccountNumber)
                                </td>
                                @* işlem sayısı *@
                                <td>
                                    @item.TransactionCount.ToString("N0")
                                </td>
                                @* toplam yatırım *@
                                <td class="text-right">
                                    @item.DepositSum.ToString("N2")
                                </td>
                                @* toplam komisyon *@
                                @*<td class="text-right">
                                    @item.BankCharge.ToString("N2"))
                                </td>*@
                                @* toplam çekim *@
                                <td class="text-right">
                                    @((item.DrawSum + item.DrawSplitSum).ToString("N2"))
                                </td>

                                @* toplam bakiye *@
                                <td class="text-right">
                                    @item.Balance.ToString("N2")
                                </td>

                                @* durum *@

                                <td class="text-right">@Html.DisplayFor(modelItem => item.AccountAmountRedirectName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Device)</td>
                                <td>@Html.DisplayFor(modelItem => item.OrderNumber)</td>
                                <td>@Html.DisplayFor(modelItem => item.LastUser)</td>
                                @if (item.IsPassive == false)
                                {
                                    <td><span class="badge badge-success">Aktif</span></td>
                                }
                                else
                                {
                                    <td><span class="badge badge-secondary">Pasif</span></td>
                                }
                                <td>
                                    <button type="button" class="btn btn-xs btn-danger" data-toggle="modal" data-target="#paparaModal-@item.Id" title="Özet"><i class="fab fa-paypal"></i></button>


                                    <a class="btn btn-xs btn-info" href="@Url.Action("Details", "AccountInfo", new { id = item.Id })" title="Detay"><i class="fas fa-search-plus"></i></a>
                                    <a class="btn btn-xs btn-warning" href="@Url.Action("Edit", "AccountInfo", new { id = item.Id })" title="Düzenle"><i class="far fa-edit"></i></a>

                                    @if (item.IsPassive == false)
                                    {
                                        <button type="button" class="btn btn-xs btn-primary" data-toggle="modal" data-target="#passiveModal-@item.Id" title="Pasifleştir"><i class="fas fa-toggle-on"></i></button>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn btn-xs btn-primary" data-toggle="modal" data-target="#modelActive-@item.Id" title="Aktifleştir"><i class="fas fa-toggle-off"></i></button>
                                    }

                                    <button type="button" class="btn btn-xs btn-secondary" data-toggle="modal" data-target="#archieveModal-@item.Id" title="Arşivle"><i class="fas fa-archive"></i></button>
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>

            <div class="tab-pane fade" id="ready-account" role="tabpanel" aria-labelledby="home-tab">
                <div class="table-responsive mt-4">
                    <table class="table table-sm table-bordered table-hover table-dark text-white-50">
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                İsim Soyisim
                            </th>
                            <th>
                                Hesap No
                            </th>
                            <th>
                                İşlem Sayısı <span data-toggle="tooltip" data-placement="bottom" title="@startDate @endDate arasındaki yatırım sayısı."><i class="fas fa-info-circle"></i></span>
                            </th>
                            <th>Toplam Yatırım</th>
                            <th>Toplam Çekim</th>
                            <th>Bakiye</th>
                            <th>Tutar Yönlendirme</th>
                            <th>Cihaz</th>
                            <th>Sıra No</th>
                            <th>Son İşlem Yapan Kullanıcı</th>
                            <th>Durum</th>
                            <th style="min-width:120px"></th>
                        </tr>

                        @foreach (var item in ViewBag.ReadyAccountInfo)
                        {
                            <tr style="color: #@item.TextColor; background-color: #@item.BgColor">
                                <td>
                                    @item.Id
                                </td>
                                <td>
                                    @item.Name @item.SurName
                                </td>
                                <td data-toggle="tooltip" data-placement="bottom" title="@item.AccountInfoTypeName">
                                    @item.AccountNumber
                                </td>
                                <td>
                                    @item.TransactionCount.ToString("N0")
                                </td>
                                @* toplam yatırım *@
                                <td class="text-right">
                                    @item.DepositSum.ToString("N2")
                                </td>
                                @* toplam komisyon *@
                                @*<td class="text-right">
                                    @(((item.ConfirmDepositSum + item.NewDepositSum) * 3.4M / 100).ToString("N2"))
                                </td>*@
                                @* toplam çekim *@
                                <td class="text-right">
                                    @((item.DrawSum + item.DrawSplitSum).ToString("N2"))
                                </td>
                                @* toplam bakiye *@
                                <td class="text-right">
                                    @item.Balance.ToString("N2")
                                </td>

                                @if (Model.Any(x => x.Id == item.Id && x.AccountAmountRedirectName != null))
                                {
                                    <td class="text-right">@Model.Where(x => x.Id == item.Id).FirstOrDefault().AccountAmountRedirectName</td>
                                }
                                else
                                {
                                    <td class="text-right"></td>
                                }
                                <td>@item.Device</td>
                                <td>@item.OrderNumber</td>
                                <td>@item.LastUser</td>
                                @if (item.IsPassive == false)
                                {

                                    <td><span class="badge badge-success">Aktif</span></td>
                                }
                                else
                                {
                                    <td><span class="badge badge-secondary">Pasif</span></td>
                                }
                                <td>
                                    <button type="button" class="btn btn-xs btn-danger" data-toggle="modal" data-target="#paparaModal-@item.Id" title="Özet"><i class="fab fa-paypal"></i></button>
                                    <a class="btn btn-xs btn-info" href="@Url.Action("Details", "AccountInfo", new { id = item.Id })" title="Detay"><i class="fas fa-search-plus"></i></a>
                                    <a class="btn btn-xs btn-warning" href="@Url.Action("Edit", "AccountInfo", new { id = item.Id })" title="Düzenle"><i class="far fa-edit"></i></a>
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>

            <div class="tab-pane fade" id="active-account" role="tabpanel" aria-labelledby="home-tab">
                <div class="table-responsive mt-4">
                    <table class="table table-sm table-bordered table-hover table-dark text-white-50">
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                İsim Soyisim
                            </th>
                            <th>
                                Hesap No
                            </th>
                            <th>
                                İşlem Sayısı <span data-toggle="tooltip" data-placement="bottom" title="@startDate @endDate arasındaki yatırım sayısı."><i class="fas fa-info-circle"></i></span>
                            </th>
                            <th>Toplam Yatırım</th>
                            <th>Toplam Çekim</th>
                            <th>Bakiye</th>
                            <th>Tutar Yönlendirme</th>
                            <th>Cihaz</th>
                            <th>Sıra No</th>
                            <th>Son İşlem Yapan Kullanıcı</th>
                            <th>Durum</th>
                            <th style="min-width:120px"></th>
                        </tr>

                        @foreach (var item in ViewBag.ActiveAccountInfo)
                        {
                            <tr style="color: #@item.TextColor; background-color: #@item.BgColor">
                                <td>
                                    @item.Id
                                </td>
                                <td>
                                    @item.Name @item.SurName
                                </td>
                                <td data-toggle="tooltip" data-placement="bottom" title="@item.AccountInfoTypeName">
                                    @item.AccountNumber
                                </td>
                                <td>
                                    @item.TransactionCount.ToString("N0")
                                </td>
                                @* toplam yatırım *@
                                <td class="text-right">
                                    @item.DepositSum.ToString("N2")
                                </td>
                                @* toplam komisyon *@
                                @*<td class="text-right">
                                    @(((item.ConfirmDepositSum + item.NewDepositSum) * 3.4M / 100).ToString("N2"))
                                </td>*@
                                @* toplam çekim *@
                                <td class="text-right">
                                    @((item.DrawSum + item.DrawSplitSum).ToString("N2"))
                                </td>
                                @* toplam bakiye *@
                                <td class="text-right">
                                    @item.Balance.ToString("N2")
                                </td>

                                @if (Model.Any(x => x.Id == item.Id && x.AccountAmountRedirectName != null))
                                {
                                    <td class="text-right">@Model.Where(x => x.Id == item.Id).FirstOrDefault().AccountAmountRedirectName</td>
                                }
                                else
                                {
                                    <td class="text-right"></td>
                                }
                                <td>@item.Device</td>
                                <td>@item.OrderNumber</td>
                                <td>@item.LastUser</td>
                                @if (item.IsPassive == false)
                                {

                                    if (item.Id == item.CurrentAccountInfoId)
                                    {
                                        <td><span class="badge badge-primary">İşlemde</span></td>
                                    }
                                    else
                                    {
                                        <td><span class="badge badge-success">Aktif</span></td>
                                    }

                                }
                                else
                                {
                                    <td><span class="badge badge-secondary">Pasif</span></td>
                                }
                                <td>
                                    <button type="button" class="btn btn-xs btn-danger" data-toggle="modal" data-target="#paparaModal-@item.Id" title="Özet"><i class="fab fa-paypal"></i></button>
                                    <a class="btn btn-xs btn-info" href="@Url.Action("Details", "AccountInfo", new { id = item.Id })" title="Detay"><i class="fas fa-search-plus"></i></a>
                                    <a class="btn btn-xs btn-warning" href="@Url.Action("Edit", "AccountInfo", new { id = item.Id })" title="Düzenle"><i class="far fa-edit"></i></a>
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>

            @foreach (var item2 in _shift)
            {
                <div class="tab-pane fade" id="shift-@item2.Id" role="tabpanel" aria-labelledby="home-tab">
                    <div class="table-responsive mt-4">
                        <table class="table table-sm table-bordered table-hover table-dark text-white-50">
                            <tr>
                                <th>
                                    Id
                                </th>
                                <th>
                                    İsim
                                </th>
                                <th>
                                    Soyisim
                                </th>
                                <th>
                                    Hesap No
                                </th>
                                <th>Durum</th>
                                <th>@item2.StartTime.ToString(@"hh\:mm") - @item2.EndTime.ToString(@"hh\:mm")</th>
                            </tr>
                            @foreach (var item in _shiftAccount.Where(x => x.ShiftTypeId == item2.Id))
                            {
                                <tr>
                                    <td>@item.AccountInfoId</td>
                                    <td>@item.AccountInfo.Name</td>
                                    <td>@item.AccountInfo.SurName</td>
                                    <td>@item.AccountInfo.AccountNumber</td>
                                    @if (item.AccountInfo.IsPassive == false)
                                    {
                                        <td><span class="badge badge-success">Aktif</span></td>
                                    }
                                    else
                                    {
                                        <td><span class="badge badge-secondary">Pasif</span></td>
                                    }
                                    <td>
                                        <button type="button" class="btn btn-xs btn-warning" data-toggle="modal" data-target="#anotherShift-@item.Id" title="Edit"><i class="fas fa-plus-circle"></i> Başka Shifte Ekle</button>
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            }

        </div>


        <hr />
        <div class="row">
            <div class="col-sm-2">
                <span>Sayfa @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</span>
            </div>
            <div class="col-sm-10">
                @Html.PagedListPager(Model, page => Url.Action("Index", "AccountInfo", new { page = page, currentFilter = ViewBag.CurrentFilter })
                                                                            , new PagedListRenderOptions
                                                                            {
                                                                                UlElementClasses = new string[] { "pagination pagination-sm justify-content-end my-0" },
                                                                                LiElementClasses = new string[] { "page-item" },
                                                                                ContainerDivClasses = new string[] { "page float-right" }
                                                                            })
            </div>
        </div>
    </div>
</div>


@foreach (var item in Model)
{
    <div class="modal fade" id="paparaModal-@item.Id" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body bg-white text-dark">

                    <h4 class="text-center mb-5">Hesap Detayları</h4>

                    <div class="d-flex mb-4">
                        <div class="p-2 flex-shrink-1">
                            <div class="bg-secondary mx-2 d-flex justify-content-center align-items-center" style="width:64px; height:64px; border-radius:50%;">
                                <i class="far fa-user fa-3x text-white"></i>
                            </div>
                        </div>
                        <div class="p-2 w-100 ml-2">
                            <h6>@item.Name @item.SurName</h6>
                            <span class="d-block text-muted">@item.Phone</span>
                        </div>
                    </div>

                    <div class="mx-2 border-secondary border-bottom pb-2 mb-4">
                        <span class="d-block text-muted mb-1">Hesap Türü</span>
                        <span class="d-block" style="font-size:16px;">Türk Lirası Hesabı</span>
                    </div>

                    <div class="d-flex align-items-center justify-content-between mx-2 border-secondary border-bottom pb-2 mb-4">
                        <span>
                            <span class="d-block" style="font-weight: 600 !important;">Hesap Tipi</span>
                            <small class="text-muted">Onaysız, Onaylı ya da Sözleşmeli</small>
                        </span>
                        <span style="font-weight: 500 !important;">@item.AccountInfoTypeName</span>
                    </div>

                    <div class="d-flex align-items-center justify-content-between mx-2 border-secondary border-bottom pb-2 mb-4">
                        <span>
                            <span class="d-block" style="font-weight: 600 !important;">Papara numarası</span>
                            <small class="text-muted">Paylaşarak para transferi / ödeme alabilirsin</small>
                        </span>
                        <span style="color: #8c00a1 !important; font-weight: 500 !important;">@item.AccountNumber</span>
