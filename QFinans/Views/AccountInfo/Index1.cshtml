                    </div>

                    <div class="d-flex align-items-center justify-content-between mx-2 border-secondary border-bottom pb-2 mb-4">
                        <span>
                            <span class="d-block" style="font-weight: 600 !important;">Kalan nakit yatırma limiti</span>
                            <small class="text-muted">Bu ay içinde kalan nakit yatırma limiti</small>
                        </span>
                        <span style="font-weight: 500 !important;">₺@String.Format("{0:N2}", item.AccountInfoTypeCashInAmountLimit)</span>
                    </div>

                    <div class="d-flex align-items-center justify-content-between mx-2 border-secondary border-bottom pb-2 mb-4">
                        <span>
                            <span class="d-block" style="font-weight: 600 !important;">Farklı kişilerden gelen transfer</span>
                            <small class="text-muted">Bu ay içinde hesabına para transfer eden farklı kişi sayısı</small>
                        </span>
                        <span style="font-weight: 500 !important;">@String.Format("{0:N0}", item.DifferentUsersTransactionCount)</span>
                    </div>

                    <div class="d-flex align-items-center justify-content-between mx-2 border-secondary border-bottom pb-2 mb-4">
                        <span>
                            <span class="d-block" style="font-weight: 600 !important;">Gelen transfer sayısı</span>
                            <small class="text-muted">Bu ay içinde hesabına gelen para transferi sayısı</small>
                        </span>
                        <span style="font-weight: 500 !important;">@String.Format("{0:N0}", item.TransactionCount)</span>
                    </div>

                    <div class="d-flex align-items-center justify-content-between mx-2 border-secondary border-bottom pb-2 mb-4">
                        <span>
                            <span class="d-block" style="font-weight: 600 !important;">Gelen transfer tutarı</span>
                            <small class="text-muted">Bu ay içinde hesabına gelen para transferi tutarı</small>
                        </span>
                        <span style="font-weight: 500 !important;">₺@String.Format("{0:N2}", (item.DepositSumMonth + item.CashInSumMonth))</span>
                    </div>

                    <button type="button" class="btn btn-sm btn-info float-right" data-dismiss="modal"><i class="fas fa-times-circle"></i> Kapat</button>

                </div>
            </div>
        </div>
    </div>

    if (item.IsPassive == false)
    {
        <div class="modal fade" id="passiveModal-@item.Id" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Pasifleştir</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    @using (Html.BeginForm("SetPassive", "AccountInfo", new { id = item.Id }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="modal-body">
                            <div class="alert alert-warning" role="alert">
                                Pasifleştirmek istediğinizden emin misiniz?
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-sm btn-info" data-dismiss="modal"><i class="fas fa-times-circle"></i> Vazgeç</button>
                            <button type="submit" class="btn btn-sm btn-primary"><i class="fas fa-toggle-off"></i> Pasifleştir</button>
                        </div>
                    }

                </div>
            </div>
        </div>
    }
    else
    {
        <div class="modal fade" id="modelActive-@item.Id" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <form action="/AccountInfo/SetActive/@item.Id" method="post" id="formActive-@item.Id">
                        @Html.AntiForgeryToken()
                        <div class="modal-header">
                            <h5 class="modal-title">Aktifleştir</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="alert alert-warning" role="alert">
                                Akitfleştirmek istediğinizden emin misiniz?
                            </div>
                            <div class="form-group my-2">
                                <label for="selectAmountRedirectId-@item.Id">Hesap</label>
                                <select class="form-control select2" id="selectAmountRedirectId-@item.Id" name="accountAmountRedirectId" required>
                                    <option>Seçiniz</option>
                                    @foreach (var item2 in _accountAmountRedirectId)
                                    {
                                        if (item.AccountAmountRedirectId == item2.Id)
                                        {
                                            <option value="@item2.Id" selected>@item2.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@item2.Id">@item2.Name</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-sm btn-info" data-dismiss="modal"><i class="fas fa-times-circle"></i> Vazgeç</button>
                            <button type="submit" class="btn btn-sm btn-primary"><i class="fas fa-toggle-on"></i> Aktifleştir</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>

    }

    <div class="modal fade" id="archieveModal-@item.Id" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Arşivle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                @using (Html.BeginForm("SendArchieve", "AccountInfo", new { id = item.Id }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="modal-body">
                        <div class="alert alert-warning" role="alert">
                            Arşivlemek istediğinizden emin misiniz?
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-sm btn-info" data-dismiss="modal"><i class="fas fa-times-circle"></i> Vazgeç</button>
                        <button type="submit" class="btn btn-sm btn-secondary"><i class="fas fa-archive"></i> Arşivle</button>
                    </div>
                }

            </div>
        </div>
    </div>
}

@foreach (var item2 in _shift)
{
    
    foreach (var item in _shiftAccount.Where(x => x.ShiftTypeId == item2.Id))
    {
        <div class="modal fade" id="anotherShift-@item.Id" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Başka Shifte Ekle</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    @using (Html.BeginForm("AddAccountInfo", "ShiftType", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("action", 1)
                        <div class="modal-body">
                            <div class="form-group d-none">
                                <input class="form-control" type="number" id="AccountInfoId-@item.Id" name="AccountInfoId" value="@item.AccountInfoId" readonly>
                            </div>

                            <div class="form-group">
                                <label for="AccountInfoId">Shift Türü</label>
                                <select class="form-control select2" id="AccountInfoId-@item.Id" name="ShiftTypeId" required>
                                    <option>Seçiniz</option>
                                    @foreach (var item3 in _shift)
                                    {
                                        <option value="@item3.Id">@item3.Name</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-sm btn-info" data-dismiss="modal"><i class="fas fa-times-circle"></i> Vazgeç</button>
                            <button type="submit" class="btn btn-sm btn-success"><i class="fas fa-save"></i> Kaydet</button>
                        </div>
                    }

                </div>
            </div>
        </div>
    }

}

