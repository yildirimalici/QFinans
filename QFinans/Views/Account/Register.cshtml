            <hr />
            <a class="btn btn-sm btn-info" href="@Url.Action("Index", "AppUser")"><i class="fas fa-arrow-circle-left"></i> Geri Dön</a>
            <button type="submit" class="btn btn-sm btn-success"><i class="fas fa-save"></i> Kaydet</button>

        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        function setAllCheck() {
            if (document.getElementById('allCheck').checked) {
                var check = document.getElementsByName('RoleName')
                for (var i = 0; i < check.length; i++) {
                    check[i].checked = true
                }
            } else {
                var check = document.getElementsByName('RoleName')
                for (var i = 0; i < check.length; i++) {
                    check[i].checked = false
                }
            }
        }
    </script>
}
