                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card h-100">
                        <div class="card-header">BankType</div>
                        <div class="card-body">
                            @foreach (var item in roles.Where(x => x.Name.EndsWith("BankType")))
                            {
                                <div class="col-sm-3">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="@item.Name" name="RoleName" value="@item.Name">
                                        <label class="custom-control-label" for="@item.Name">@item.Name</label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card h-100">
                        <div class="card-header">BankInfo</div>
                        <div class="card-body">
                            @foreach (var item in roles.Where(x => x.Name.EndsWith("BankInfo") && !x.Name.Contains("Customer")))
                            {
                                <div class="col-sm-3">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="@item.Name" name="RoleName" value="@item.Name">
